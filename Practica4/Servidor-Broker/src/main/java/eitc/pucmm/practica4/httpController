package eitc.pucmm.practica4;

import org.springframework.http.MediaType;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.CrossOrigin;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.servlet.mvc.method.annotation.SseEmitter;
import java.io.IOException;

@Controller
public class httpController {

    private SseEmitter emitter;

    @RequestMapping("/")
    public String index(){
        return "index.html";
    }

    @GetMapping("/sse")
    //@CrossOrigin
    public SseEmitter createConection(){
        emitter = new SseEmitter();
        //SseEmitter sseEmitter = new SseEmitter(Long.MAX_VALUE);
        //sseEmitter.send(SseEmitter.event().name("update").data("test", MediaType.APPLICATION_JSON));
        //sseEmitter.complete();
        //return sseEmitter;
        return emitter;
    }

    // in another thread
    void sendEvents(Object obj) {
        try {
            //emitter.send("Alpha");
            emitter.send(SseEmitter.event().name("update").data(obj, MediaType.APPLICATION_JSON));
            emitter.complete();
        } catch(Exception e) {
            emitter.completeWithError(e);
        }
    }


}
