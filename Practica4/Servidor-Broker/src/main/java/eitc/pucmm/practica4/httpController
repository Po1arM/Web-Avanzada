package eitc.pucmm.practica4;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.MediaType;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.servlet.mvc.method.annotation.SseEmitter;

@Controller
public class httpController {

    private SseEmitter emitter;

    @Autowired
    private MensajeRepository mensajeRepository;

    @RequestMapping("/")
    public String index(Model model){
        model.addAttribute("jsonBom", mensajeRepository.findAll());
        //model.addAttribute("s1",mensajeRepository.findAllByIdDispositivo(1))
        //        .addAttribute("s2",mensajeRepository.findAllByIdDispositivo(2));
        return "index.html";
    }

    @GetMapping("/sse")
    //@CrossOrigin
    public SseEmitter createConection(){
        emitter = new SseEmitter();
        //SseEmitter sseEmitter = new SseEmitter(Long.MAX_VALUE);
        //sseEmitter.send(SseEmitter.event().name("update").data("test", MediaType.APPLICATION_JSON));
        //sseEmitter.complete();
        //return sseEmitter;
        return emitter;
    }

    // in another thread
    void sendEvent() {
        try {
            //emitter.send("Alpha");
            emitter.send(SseEmitter.event().name("update").data(mensajeRepository.findAll(), MediaType.APPLICATION_JSON));
            emitter.complete();
        } catch(Exception e) {
            emitter.completeWithError(e);
        }
    }


}
